# Server
PORT=5001
NODE_ENV=development

# JWT - Generate: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# MongoDB
MONGODB_URI=mongodb://localhost:27017/afrikad
# Optional: separate DB for tests
MONGODB_URI_TEST=mongodb://localhost:27017/afrikad_test

# Kora API (https://korapay.com)
KORA_API_KEY=pk_test_xxx
KORA_SECRET_KEY=sk_test_xxx
KORA_BASE_URL=https://api.korapay.com

# Public URL of this API (for emails, webhooks)
BASE_URL=https://your-tunnel-or-domain.com

# CORS - Comma-separated origins, or * for allow all
ALLOWED_ORIGINS=https://yourapp.com,https://admin.yourapp.com

# Rate limits (optional)
RATE_LIMIT_MAX_API=200
RATE_LIMIT_MAX_AUTH=10

# Email (optional - for password reset, verification)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@afrikad.com

# Admin seed (optional)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me
ADMIN_ROLE=admin
